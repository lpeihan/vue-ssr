{
  "name": "vue-ts-webpack4",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:client && npm run build:server",
    "build:client": "cross-env NODE_ENV=production node build/build.js",
    "build:server": "cross-env NODE_ENV=production webpack --config build/webpack.server.conf.js --hide-modules",
    "dev:client": "cross-env NODE_ENV=development node build/dev-server.js",
    "start": "node server/server.js",
    "lint-fix": "eslint --fix --ext .js --ext .vue src/ build/",
    "babel-node": "babel-node server/server.js --config-file ./server/.babelrc.js",
    "dev:server": "cross-env NODE_ENV=development nodemon --exec npm run babel-node --watch server",
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\" "
  },
  "author": "",
  "license": "ISC",
